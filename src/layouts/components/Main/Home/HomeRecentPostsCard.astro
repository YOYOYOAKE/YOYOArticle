---
import List from '~/layouts/components/Main/Lists/PostsListItems.astro'
import type { CollectionEntry } from 'astro:content'

interface Props {
  title: string
  postsSubtitle: string
  posts: CollectionEntry<'posts'>[]
}

const { title, postsSubtitle, posts } = Astro.props
---

<div class="py-8 pb-10 px-6 sm:px-8">
  <h2 class="text-2xl sm:text-3xl tracking-tight">{title}</h2>
  <p class="text-muted-foreground mb-6 mt-1">{postsSubtitle}</p>
  <List {posts} />
</div>
