---
import { cn, formatDate } from '~/lib/utils'
import type { CollectionEntry } from 'astro:content'

type ArticleEntry = CollectionEntry<'posts'> | CollectionEntry<'jottings'>

export type CardProps = {
  post: ArticleEntry
  index: number
  class?: string
  style?: string
}

type Props = {
  posts: ArticleEntry[]
  baseUrl?: string
}

const { posts, baseUrl = '/posts' } = Astro.props

const topText = 'TOP'
const unfinishedText = 'Unfinished'

const tagBadgeClass = 'bg-muted/40 text-muted-foreground hover:bg-muted/60 hover:text-foreground border border-transparent'
const recommendBadgeClass =
  'border border-transparent bg-gradient-to-r from-slate-500/15 via-blue-500/15 to-indigo-500/15 text-slate-700 dark:text-slate-300 hover:from-slate-500/25 hover:via-blue-500/25 hover:to-indigo-500/25'
const tagIconClass = 'icon-[heroicons--hashtag-16-solid]'
const recommendIconClass = 'icon-[garden--sparkle-fill-16]'
---

<div class="content-visibility: auto">
  {
    posts.map((post, index) => {
      const postDate = (post.data as any).createTime

      return (
        <div
          class:list={['group relative block py-6 border-b border-border/60 last:border-none', 'fade-up']}
          style={`animation-delay: ${index * 100}ms`}
        >
          <article class="relative z-1 flex flex-col gap-2 transform transition-transform duration-300 group-hover:translate-x-4">
            <div class="flex sm:items-center gap-2 sm:gap-3 text-sm text-muted-foreground">
              <span class="inline-flex items-center gap-1.5">
                <span class="icon-[ph--calendar-blank] size-3.5 sm:size-4" />
                <time datetime={postDate.toISOString()} class="text-xs sm:text-sm">
                  {formatDate(postDate)}
                </time>
              </span>
            </div>
            <a href={`${baseUrl}/${post.id}`} class="block">
              <div class="text-base font-semibold text-foreground leading-tight group-hover:text-primary transition-colors line-clamp-2">
                {post.data.title}
              </div>
              {post.data.description && <p class="mt-1 text-sm text-muted-foreground/90 leading-5 line-clamp-2">{post.data.description}</p>}
            </a>

            {(post.data.top || (post.data.tags && post.data.tags.length > 0) || post.data.completed === false) && (
              <div class="flex flex-wrap gap-1.5">
                {post.data.top && (
                  <span
                    class={cn(
                      'inline-flex items-center font-medium transition-colors duration-200 select-none text-xs px-2 py-0.5 gap-1',
                      recommendBadgeClass
                    )}
                    title="Top"
                  >
                    <span class={recommendIconClass} />
                    <span class="font-semibold tracking-wide">{topText}</span>
                  </span>
                )}
                {post.data.completed === false && (
                  <span
                    class={cn(
                      'inline-flex items-center font-medium transition-colors duration-200 select-none text-xs px-2 py-0.5 gap-1',
                      tagBadgeClass
                    )}
                    title={unfinishedText}
                  >
                    {unfinishedText}
                  </span>
                )}
                {post.data.tags?.slice(0, 5).map((tag) => (
                  <a
                    href={`/tags/${tag}`}
                    aria-label={`View posts tagged with ${tag}`}
                    class={cn(
                      'inline-flex items-center font-medium transition-colors duration-200 select-none text-xs px-2 py-0.5 gap-1',
                      tagBadgeClass
                    )}
                  >
                    <span class={tagIconClass} />
                    {tag}
                  </a>
                ))}
                {post.data.tags && post.data.tags.length > 5 && (
                  <span class="text-xs text-muted-foreground/60">+{post.data.tags.length - 5} more</span>
                )}
              </div>
            )}
          </article>

          {post.data.top && (
            <span class="absolute right-2 sm:right-4 top-1/2 -translate-y-1/2 -translate-x-4 size-16 sm:size-20 opacity-0 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300 text-primary/10 dark:text-primary/20 icon-[solar--star-rainbow-bold-duotone]" />
          )}

          <div class="absolute left-0 top-0 h-full w-0.5 sm:w-1 scale-y-0 bg-accent/80 transition-transform duration-300 group-hover:scale-y-100" />
        </div>
      )
    })
  }
</div>
